<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grd"
    tools:context="com.example.vipuloswal.letsc.Game">

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Score "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/score"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/s"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="#fff"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/ans1"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ans2"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:textColor="#174113"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ans3"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:textColor="#897773"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/ans4"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:textColor="#F909A2"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/ans5"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:textColor="#59F909"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/ans6"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:textColor="#FE0000"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/ans7"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#F7FE00"
        android:textSize="80sp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/a"
        android:background="#000"
        android:layout_below="@+id/progress"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/input"
        android:maxLines="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress"
        android:background="#000"
        android:textSize="40sp"
        android:layout_toRightOf="@+id/a"
        android:textColor="#fff" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/submit"
        android:layout_below="@+id/input"
        android:layout_marginRight="30dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="submit" />

    <Button
        android:id="@+id/timeplus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="       Time +     "
        android:visibility="gone"/>

    <Button
        android:id="@+id/skip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="       Skip     "
        android:visibility="gone"/>

</RelativeLayout>